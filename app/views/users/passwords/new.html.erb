<%= stylesheet_link_tag "signin" %>

<div class='login-container'>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'form-signin', method: :post }) do |f| %>
  <%= devise_error_messages! %>

<h2 class="form-signin-heading links">Forgot your password?</h2>
  <div class="field">
    <%= f.label :email, :class => 'sr-only' %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me Instructions", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
	<%= render "users/shared/links" %>
<% end %>

