<%= stylesheet_link_tag "signin" %>

<div class='login-container'>
  <p id="notice"><%= notice %></p>

  <h1 class="text-center form-signin-heading links">High Scores</h1>

  <table align="center">
    <thead>
      <tr>
        <th style="font-weight:bold; color:#fff">User</th>
        <th style="font-weight:bold; color:#fff">Score</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @high_scores.each do |high_score| %>
        <tr>
          <td style="padding:10px; color:#fff"><%= high_score.user %></td>
          <td style="padding:10px; color:#fff"><%= high_score.score %></td>
          <td style="padding:10px"><%= link_to 'Show', high_score %></td>
          <td style="padding:10px"><%= link_to 'Edit', edit_high_score_path(high_score) %></td>
          <td style="padding:10px"><%= link_to 'Destroy', high_score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>

<div style="margin:0 auto; text-align: center">
  <%= link_to 'New High score', new_high_score_path%>
</div>