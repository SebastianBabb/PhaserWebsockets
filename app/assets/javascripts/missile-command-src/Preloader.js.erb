		this.load.image('land', '<%= asset_path('missile-command/land.png') %>');
		this.load.image('marker', '<%= asset_path('missile-command/marker.png') %>');
		this.load.image('missile', '<%= asset_path('missile-command/missile.png') %>');
		this.load.image('sky', '<%= asset_path('missile-command/sky.png') %>');
		this.load.spritesheet('city', '<%= asset_path('missile-command/city.png') %>', 64, 36);

	},

	create: function () {

		this.preloadBar.cropEnabled = false;

		this.state.start('MainMenu');

